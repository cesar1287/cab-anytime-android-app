<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llRegisterSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_fp_margin"
                android:layout_marginTop="@dimen/dimen_fp_margin"
                android:gravity="center">

                <com.virtugos.uberapp.component.MyFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_fp_margin"
                    android:text="@string/text_register_with"
                    android:textColor="@color/color_text_register"
                    android:textSize="@dimen/size_general" />

                <ImageButton
                    android:id="@+id/btnFb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/fb_register" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_image_layout"
                android:background="@drawable/bg_profile"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/profile_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.mikhaellopez.circularimageview.CircleImageView
                        android:id="@+id/ivChooseProPic"
                        android:layout_width="@dimen/menu_img_width"
                        android:layout_height="@dimen/menu_img_height"
                        android:layout_marginRight="@dimen/feedback_margin"
                        android:src="@drawable/default_user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.virtugos.uberapp.component.MyTitleFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_fp_margin"
                            android:layout_marginRight="@dimen/dimen_fp_margin"
                            android:text="@string/text_upload_picture"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_label" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_history_one"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnClickPhoto"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/feedback_margin"
                                android:background="@null"
                                android:src="@drawable/photocam_register" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- <ScrollView -->
            <!-- android:id="@+id/scrollView1" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="0dp" -->
            <!-- android:layout_weight="1" > -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_fname_caps"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_fname_caps"
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_lname_caps"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_lname_caps"
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_email"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_email"
                    android:textAllCaps="true"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small" />


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:id="@+id/tvPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_passs"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_passs"
                    android:textAllCaps="true"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:id="@+id/ivPassword"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_number"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal">

                    <com.virtugos.uberapp.component.MyFontTextViewMedium
                        android:id="@+id/spCCode"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/activity_margin_register"
                        android:layout_weight="0.4"
                        android:background="@drawable/spinner_ab_default_holo_light"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_label"
                        android:enabled="false"/>

                    <com.virtugos.uberapp.component.MyFontEdittextView
                        android:id="@+id/etNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_edittext"
                        android:ems="10"
                        android:hint="@string/text_number"
                        android:textAllCaps="true"
                        android:inputType="numberSigned"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/color_text_dark"
                        android:textSize="@dimen/size_general_small" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_address"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_address"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_bio"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_label"
                    android:textSize="@dimen/size_label"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_bio"
                    android:textAllCaps="true"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small"
                    android:visibility="gone" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_fp_margin"
                    android:layout_marginTop="@dimen/dimen_fp_margin"
                    android:background="@color/light_gray_full"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontTextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/text_zip"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/size_label"
                    android:visibility="gone" />

                <com.virtugos.uberapp.component.MyFontEdittextView
                    android:id="@+id/etZipCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@null"
                    android:ems="10"
                    android:hint="@string/text_zip"
                    android:textAllCaps="true"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/color_text_dark"
                    android:textSize="@dimen/size_general_small"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.virtugos.uberapp.component.MyFontButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="@dimen/signin_button_padding"
        android:paddingTop="@dimen/signin_button_padding"
        android:text="@string/text_register"
        android:textColor="@color/white"/>

</LinearLayout>